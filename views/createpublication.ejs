<% include _header %>

<h1>Registrar publicación</h1>
<br>
<form action="/createpublication" method="post">
    <div class="form-group row">
        <label class="col-md-3 text-right">Información a publicar:</label> 
        <div class="col-md-5">
            <textarea name="description" type="text" class="form-control" placeholder="Describir información" required autofocus/>
            </textarea>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-3 text-right">Información:</label>
        <div class="col-md-4">
            <select name="category" class="form-control" id="exampleFormControlSelect1">
                <option value="Reflectiva">Reflexiva</option>
                <option value="Interesante">Interesante</option>
                <option value="Otra">Otra</option>
            </select>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-3 text-right">Fecha:</label>
        <div class="col-md-4">
            <input name="date" type="text" class="form-control" placeholder="Fecha" required/>
        </div>
    </div>
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-2">
        <input type="submit" value="Registrar Publicación" class="btn btn-primary btn-block"/>
        </div>
    </div>
</form>

<% include _footer %>